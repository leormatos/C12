gutters = {
	xs: 1rem,
	sm: 1.5rem,
	md: 2rem,
	lg: 2.5rem,
	xg: 2.5rem,
}

.container
.container-lg
	margin-left: auto
	margin-right: auto
	display: block
	width: 100%
	max-width: 72.5rem
	padding: 0 1rem
	+above(md)
		padding: 0
		width: 90%
	+above(xg)
		width: 100%

.container-lg
	padding: 0

.g-row
	display flex
	flex-direction row
	flex-wrap wrap
	box-sizing border-box
	align-items flex-start


for breakpoint in breakpoints
	+above(breakpoint)
		.g-row
			margin-left: (gutters[breakpoint] * -0.5)
			margin-right: (gutters[breakpoint] * -0.5)

		for num in (0..12)
			.g-{breakpoint}-{num}
				if num == 0
					display none
				else
					width: ((100/12*num))%

	for breakpoint2 in breakpoints
		for num in (1..12)
			+above(breakpoint2)
				.g-{breakpoint}-{num}
					+cache(breakpoint2)
						+cache(num)
							display block
							padding-left: (gutters[breakpoint2]/2)
							padding-right: (gutters[breakpoint2]/2)
							box-sizing border-box
							flex-shrink 0
