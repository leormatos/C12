.Navbar
	background: $color-white
	color: $color-black
	font-weight: 500;
	width: 100%
	padding-top: 0.5rem
	padding-bottom: 0.5rem
	line-height: 1rem
	& > .container
		display: flex
		align-items center
		justify-content space-between
		flex-wrap: wrap
	&-link, &-state
		color $color-black
		text-decoration none
	&-title
		color: currentColor
		font-size: 0.875rem
		text-transform: uppercase;
	&-triangle
		font-size: 0.875rem
		font-weight: 900
	&-state
		display: none
		font-family: 'SF Mono', 'Menlo', monospace
		font-size: 0.75rem
		padding: 3px 9px
		line-height: 1.5rem
		background: #ddd
		border-radius: 2px
		&[href]
			display block
