@keyframes Line-FadeIn
	to
		opacity: 1
		transform: translate3d(0, 0, 0)

.Line
	font-size: 2rem
	user-select: none
	padding-bottom: 2rem
	padding-top: 1rem
	opacity: 0
	transform: translate3d(0, 1.5rem, 0)
	.title
		font-size: 0.875rem
		opacity: 0.88
		font-weight: 400
		line-height: 1.25rem
		text-transform: lowercase
	&[data-index]
		cursor: pointer
		will-change transform opacity
		animation: Line-FadeIn 0.75s cubic-bezier(0.250, 0.460, 0.450, 0.940) forwards

